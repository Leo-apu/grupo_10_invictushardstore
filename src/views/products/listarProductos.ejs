<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>
    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="../css/crearProducto.css">
    <title>Invictus Hard Store</title>
</head>

<body>

    <header>
        <%- include('./partials/header.ejs') %>
    </header>

    <main>
        <section class="destacados">
            <!-- <h1>Lista de Productos </h1> -->
            <form action="/products/search" method="get">
                <div class="search-container">
                    <input class="prodSearch" type="text" id="name" name="name" required>
                    <button class="buttonSearch" type="submit" style="margin-top: 1.5rem;">Buscar</button>
                </div>
            </form>
            <div class="producto">

                <% products.forEach((product) =>{ %>
                    <article class="product-item">
                        <a href="/products/detail/<%= product.id %>" style="text-decoration: none">
                            <img class="prodImg2" src="../images/productsBD/<%= product.img %>" alt="<%= product.name %>">
                            
                            <div class="main-article">
                                <div class="">
                                    <p class="titulo2"><%= product.name %></p>
                                    
                                </div>
                                <p class="precio2">$ <%= product.price %></p>
                                <form action="/cart/add" method="POST">
                                    <input type="hidden" name="productId" value="<%= product.id %>">
                                    <% if (locals.isLoged) { %>
                                    <button type="submit" name="quantity" value="1">Agregar al Carrito</button>
                                    <% } %>
                                </form>
                            </div>
                        </a>
                    </article>
                <% }) %> 
            </div>
        </section>
    </main>

    <footer>
        <%- include('./partials/footer.ejs') %>
    </footer>

</body>
</html>